########### Meus Aliases #############

alias ls="ls -hN --color=auto --group-directories-first"
alias grep="grep --color=auto"

# copy move and remove commands
alias cp="cp -iv"
alias mv="mv -iv"
alias rm="rm -Iv"
alias mkd="mkdir -pv"

# pacman aliases
alias pacq='pacman -Q | grep'
alias pacs='pacman -Ss '

# files and configs shortcuts
alias vim="lvim"
alias stow="stow -v"
alias sxiv="nsxiv"
